<!DOCTYPE html>
<html>
  <head>
    <title>Edumall apps - Authservice</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'authservice' %>
    <%= stylesheet_pack_tag 'authservice' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>

<% @_dotenv_key = ENV.keys.select{ |str| str.include?('BASE_URL')} %>
<% @_dotenv_key.each do |env| %>
  <script>
    window["<%= env %>"] = "<%= ENV[env] %>"
  </script>
<% end %>
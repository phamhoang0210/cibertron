<script>
  $.ajax({
    type: "GET",
    url: window['AUTHSERVICE_BASE_URL'] + "/api/v01/accounts/search_role?uid=" + localStorage.getItem('gaia-uid'),
    headers: {
      'Access-Control-Allow-Origin': "*",
      'Access-Control-Allow-Methods': "GET, POST, PATCH, PUT, DELETE, OPTIONS",
      'Access-Control-Allow-Headers': "Origin, Content-Type, X-Auth-Token",
      'uid': localStorage.getItem('gaia-uid'),
      'client': localStorage.getItem('gaia-client'),
      'access-token': localStorage.getItem('gaia-access-token')
    },
    success: function(res){
      var nami_user = {"role": {"code": res.role}};
      localStorage.setItem('current_user',JSON.stringify(nami_user));
    }
  });
</script>

